#######################################
# Server Configuration
#######################################
NODE_ENV=development                   # Options: development, production, test
PORT=3000                              # Server listening port
API_VERSION=v1                         # API version prefix (e.g., /api/v1)

#######################################
# Feature Flags
#######################################
ENABLE_GRAPHQL=true                    # Enable GraphQL module
ENABLE_SWAGGER=true                    # Enable Swagger docs at /docs
ENABLE_RATE_LIMIT=true                 # Enable rate limiter middleware

#######################################
# MongoDB Configuration
#######################################
MONGO_ENABLED=false
MONGO_URI=mongodb://localhost:27017/express-backend

#######################################
# PostgreSQL Configuration
#######################################
POSTGRES_ENABLED=false
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

#######################################
# MySQL Configuration
#######################################
MYSQL_ENABLED=false
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=mydb
MYSQL_USER=root
MYSQL_PASSWORD=root

#######################################
# SQL Server Configuration
#######################################
SQLSERVER_ENABLED=true
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DB=mydb
SQLSERVER_USER=sa
SQLSERVER_PASSWORD=YourStrongPassword

#######################################
# Redis Configuration
#######################################
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

#######################################
# JWT Authentication
#######################################
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1d                      # e.g., 1d, 12h
JWT_REFRESH_SECRET=your-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

#######################################
# File Upload Configuration
#######################################
UPLOAD_PROVIDER=local                 # Options: local, s3
UPLOAD_MAX_SIZE=5242880               # 5MB in bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

#######################################
# AWS S3 Configuration (if UPLOAD_PROVIDER=s3)
#######################################
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

#######################################
# Logging Configuration
#######################################
LOG_LEVEL=debug                       # Options: debug, info, warn, error
LOG_FORMAT=pretty                     # Options: pretty, json
LOG_DIR=logs
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_MAX_SIZE=20m
LOG_RETENTION_DAYS=3d     # e.g., 3d, 7d, 14d
LOG_ZIP_ARCHIVE=true
#######################################
# Rate Limiting
#######################################
RATE_LIMIT_WINDOW_MS=900000           # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

#######################################
# CORS Configuration
#######################################
CORS_ORIGIN=*                         # Allowed origins, comma-separated or *
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

#######################################
# Health Check Settings
#######################################
HEALTH_CHECK_INTERVAL=30000           # Interval in ms
